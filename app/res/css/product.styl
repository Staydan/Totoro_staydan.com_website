@import './common/common.styl'
@import '../../node_modules/slick-carousel/slick/slick.css'

.product-container
    position: relative
    width: 100%
    .product-intro
        width: 800px
        margin: 60px auto
    .header-title
        position: relative
        width: 100%
        height: 50px
        line-height: 50px
        font-size: 30px
        padding: 25px 0 15px 0
        text-align: center
        color: $gray6
        .home-btn
            position: absolute
            top: 20px
            width: 48px
            float: left
            left: 20px
            img
                position: relative
                width: 48px
    .separator
        position: relative
        height: 1px
        background-color: #757575
        width: 15%
        margin: 20px auto 50px auto
        text-align: center
    .slick-slider
        position: relative
        width: 800px
        margin: 0px auto
        .product-img
            position: relative
            width: 100%
            height: 100%
            box-sizing: border-box
            img
                position: relative
                width: 100%
    .product-install
        position: relative
        display: block
        width: 90%
        text-align: center
        margin: 30px 5%
        .product-instal-btn, .product-play-btn
            display: inline-block
            width: 300px
            text-align: center
            background-color: #6CAF21
            color: #fff
            font-size: 30px
            height: 60px
            line-height: 60px
            font-weight: lighter
        .product-install-tip
            display: inline-block
            width: 100%
            text-align: center
            color: $gray9
            font-size: 14px
            font-weight: lighter
            margin-top: 5px
    .title-label
        border: none
        border-left: 3px solid $gray6
        font-size: 20px
        color: $gray6
        margin: 30px 0 30px 0
        padding-left: 20px
    .product-tools
        position: relative
        width: auto
        margin: 10px 20px
        .product-install-github, .product-install-crx
            float: right
        .product-instal-webstore
            img
                height: 48px
        img, .icon.svg
            height: 36px
            color: $gray6
            display: inline-block
            opacity: 0.7
            margin: 0px 20px
            path
                fill: #fff
            &:hover
                opacity: 1
    .product-rich-desc
        position: relative
        line-height: 1.4
        font-size: 18px
        color: $gray6
        padding: 0 20px
        font-family: PingFang
        font-weight: lighter

    .slick-dots
        text-align: center
        margin-top: 15px
        padding: 0
        li
            display: inline-block
            list-style: none
            width: 10px
            height: 10px
            margin: 0 10px
            &:first-child
                margin-left: 0
            &:last-child
                margin-right: 0
            button
                border-radius: 50%
                background-color: #ddd
                width: 10px
                height: 10px
                font-size: 0
                padding: 0
                border: none
            &.slick-active
                button
                    background-color: $gray9

    .slick-prev, .slick-next
        display: inline-block
        font-size: 0
        line-height: 0
        position: absolute
        top: calc(50% - 33px)
        display: block
        width: 30px
        height: 30px
        margin-top: -15px
        padding: 0
        cursor: pointer
        border: none
        outline: none
        background: transparent
        border: 15px solid transparent
    .slick-prev
        left: -70px
        border-right-color: $gray9
    .slick-next
        right: -70px
        border-left-color: $gray9



