$sdWelcomeRowWidth = 150px

.header
    position: relative
    width: 100%
    height: 50px
    line-height: 50px
    font-size: 24px
    padding-top: 15px
    text-align: center
    color: #fff

.menus
    position: relative
    top: 20px
    width: 100%
    height: 60px
    margin-bottom: 40px
    ul
        color: #fff
        font-size: 16px
        padding: 0
        font-weight: 200
        text-align: center
        li
            display: inline-block
            list-style: none
            padding: 5px 20px 5px 10px
            opacity: 1
            cursor: pointer
            color: #fff
            margin: 0 5px
            border-bottom: 1px solid rgba(255, 255, 255, 0)
            transition: all .2s linear
            &.tagged
                border-bottom: 1px solid #fff
                &::after
                    content: 'X'
                    position: relative
                    top: 0
                    right: -10px
                    display: inline-block
                    width: 1px
                    height: 100%
                    font-size: 14px
                    color: #9E9E9E
                &:hover
                    &::after
                        color: #fff

.separator
    position: relative
    height: 1px
    background-color: #ddd
    width: 25%
    margin: 20px auto 10px auto
    text-align: center

.home-container
    position: relative
    width: 100%
    overflow: auto
    background-color: transparent

.sd-logo-timestamp
    position: relative
    margin-left: 10%
    margin: 10% auto
    width: 80%
    text-align: center
    height: $sdWelcomeRowWidth
    #sd-logo
        position: relative
        width: $sdWelcomeRowWidth
        height: $sdWelcomeRowWidth
        text-align: center
        display: inline-block
        transition: all .5s ease .5s
    .time-text
        position: relative
        display: inline-block
        text-align: right
        margin-left: 80px
        .time-local-text
            position: relative
            color: #fff
            font-size: 60px
            display: block
            letter-spacing: 2px
            text-align: right
            min-width: 250px
            font-weight: lighter
            font-family: PingFang
        .time-color-text
            font-size: 15px
            color: #ddd
            display: block
            position: relative
            top: 0
            right: 0
            font-weight: lighter
            letter-spacing: 0

.fade-transition
    transition: all 1s ease .5s
    opacity: .75
    overflow: hidden
/* .expand-enter defines the starting state for entering */
/* .expand-leave defines the ending state for leaving */
.fade-enter, .fade-leave
    opacity: 0

.wipe-transition
    transition: all .5s ease .8s
    opacity: 1
    overflow: hidden
    margin-top: -5px
.wipe-enter, .wipe-leave
    opacity: 0
    margin-top: 0

.wipe-middle-transition
    transition: all .5s ease .5s
    opacity: 1
    overflow: hidden
    width: 70%
.wipe-middle-enter, .wipe-middle-leave
    opacity: 0
    width: 0%

.wipe-top-transition
    transition: all .5s ease 2.2s
    opacity: 1
    overflow: hidden
    margin-top: 0
.wipe-top-enter, .wipe-top-leave
    opacity: 0
    margin-top: 10px


